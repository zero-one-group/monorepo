{
    "name": "{{ package_name | kebab_case }}",
    "description": "{{ package_description }}",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "start": "node .output/server/index.mjs",
        "cleanup": "pnpm dlx del-cli node_modules .output .vinxi dist tests-results",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "test-report": "pnpm dlx serve tests-results -l 9000 -s -n -C",
        "test-coverage": "pnpm run typegen && vitest run --coverage",
        "test-ui": "pnpm run typegen && vitest --ui",
        "test": "pnpm run typegen && vitest --run",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "e2e-install": "playwright install --with-deps",
        "e2e-chrome": "playwright test --headed --project Chromium",
        "e2e-firefox": "playwright test --headed --project Firefox",
        "e2e-mobile": "playwright test --headed --project 'Mobile Chrome'",
        "e2e-safari": "playwright test --headed --project Safari",
        "e2e-report": "playwright show-report tests-results/e2e-html",
        "e2e-ui": "playwright test --ui",
        "e2e": "playwright test",
        "typegen": "tsr generate",
        "typecheck": "pnpm run typegen && tsc --noEmit"
    },
    "dependencies": {
		"@tanstack/react-router": "1.158.4",
		"@tanstack/react-router-devtools": "1.158.4",
		"@tanstack/react-start": "1.159.0",
		"consola": "^3.4.2",
		"lucide-react": "^0.563.0",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"std-env": "^3.10.0",
		"tailwind-variants": "^3.2.2"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"@playwright/test": "^1.58.2",
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/router-cli": "1.158.4",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.6.2",
		"@types/react": "^19.2.13",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.3",
		"@vitest/coverage-v8": "^4.0.18",
		"@vitest/ui": "^4.0.18",
		"dotenv": "^17.2.4",
		"happy-dom": "^20.5.0",
		"nitro": "3.0.1-alpha.2",
		"npm-check-updates": "catalog:",
		"playwright": "^1.58.2",
		"tailwindcss": "^4.1.18",
		"tailwindcss-motion": "^1.1.1",
		"typescript": "catalog:",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"vite-tsconfig-paths": "^6.0.5",
		"vitest": "^4.0.18"
	}
}
