{
	"$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
	"extends": ["./biome.json"],
	"root": false,
	"overrides": [
		{
			"includes": ["*.astro"],
			"linter": {
				"enabled": true,
				"rules": {
					"correctness": {
						"noUnusedImports": "off",
						"noUnusedVariables": "off"
					},
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			},
			"formatter": {
				"indentWidth": 2,
				"bracketSpacing": true
			}
		}
	]
}
