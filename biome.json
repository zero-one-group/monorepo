{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    },
    "linter": {
        "enabled": true,
        "ignore": ["vite-env.d.ts"],
        "rules": {
            "recommended": true,
            "a11y": {
                "noSvgWithoutTitle": "off",
                "useKeyWithClickEvents": "off"
            },
            "complexity": {
                "noBannedTypes": "off",
                "noUselessFragments": "warn"
            },
            "correctness": {
                "noUnusedImports": {
                    "level": "off",
                    "fix": "none"
                },
                "noUnusedVariables": {
                    "level": "warn",
                    "fix": "none"
                },
                "useJsxKeyInIterable": "error",
                "noUnknownFunction": "off",
                "noUnknownUnit": "error"
            },
            "nursery": {
                "useSortedClasses": {
                    "level": "warn",
                    "fix": "safe",
                    "options": {
                        "attributes": ["classList"],
                        "functions": ["cn", "clx", "clsx", "cva", "tw"]
                    }
                }
            },
            "performance": {
                "noReExportAll": "off"
            },
            "security": {
                "noDangerouslySetInnerHtmlWithChildren": "warn",
                "noDangerouslySetInnerHtml": "off"
            },
            "style": {
                "noUnusedTemplateLiteral": "off",
                "useConsistentArrayType": "warn",
                "useExportType": "warn",
                "useImportType": "warn",
                "useFilenamingConvention": {
                    "level": "off",
                    "options": {
                        "filenameCases": ["PascalCase", "camelCase", "kebab-case"]
                    }
                }
            },
            "suspicious": {
                "noArrayIndexKey": "error",
                "noAssignInExpressions": "off",
                "noCommentText": "off",
                "noConsoleLog": {
                    "level": "info",
                    "fix": "none"
                },
                "noDebugger": "off",
                "noExplicitAny": "off",
                "noDuplicateAtImportRules": "error",
                "noEmptyBlock": "warn"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "css": {
        "parser": {
            "allowWrongLineComments": false
        },
        "formatter": {
            "enabled": true,
            "quoteStyle": "double",
            "indentWidth": 2
        }
    },
    "javascript": {
        "formatter": {
            "indentWidth": 2,
            "quoteStyle": "single",
            "jsxQuoteStyle": "double",
            "arrowParentheses": "always",
            "semicolons": "asNeeded",
            "trailingCommas": "es5",
            "quoteProperties": "asNeeded",
            "bracketSpacing": true,
            "bracketSameLine": false
        }
    },
    "json": {
        "formatter": {
            "indentWidth": 4,
            "trailingCommas": "none"
        }
    },
    "overrides": [
        {
            "include": ["*.astro"],
            "linter": {
                "rules": {
                    "style": {
                        "useConst": "off",
                        "useImportType": "off"
                    }
                }
            },
            "formatter": {
                "indentWidth": 2,
                "bracketSpacing": true
            }
        }
    ],
    "files": {
        "ignoreUnknown": true,
        "include": [
            "**/*.js",
            "**/*.cjs",
            "**/*.mjs",
            "**/*.ts",
            "**/*.mts",
            "**/*.tsx",
            "**/*.css",
            "**/*.json",
            "**/*.astro"
        ],
        "ignore": [
            ".github",
            ".astro",
            ".next",
            "build",
            "dist",
            "out",
            "tmp",
            "temp",
            "templates",
            "template-*"
        ]
    }
}
