{
    "editor.defaultFormatter": "biomejs.biome",
    "typescript.enablePromptUseWorkspaceTsdk": false,
    "files.associations": {
        "*.css": "css",
        "*.toml.example": "toml",
        "*.yml.example": "yaml"
    },
    "go.toolsEnvVars": {
        "GOFLAGS": "-tags=prod,debug"
    },
    "gopls": {
        "buildFlags": ["-tags=prod,debug"]
    },
    "go.formatTool": "gofmt",
    "go.lintTool": "golangci-lint",
    "go.lintOnSave": "package",
    "search.exclude": {
        "**/.husky": true,
        "**/.output": true,
        "**/.next": true,
        "**/build": true,
        "**/dist": true,
        "**/docs": true,
        "**/templates": true,
        "**/template-*": true
    },
    "tailwindCSS.experimental.classRegex": [
        // @ref: https://www.tailwind-variants.org/docs/getting-started
        // @ref: https://github.com/paolotiu/tailwind-intellisense-regex-list
        ["(?:cn|cx|cva|clx|tv)\\(([^;]*)[\\);]", "[`'\"`]([^'\"`;]*)[`'\"`]"],
        ["classList={{([^;]*)}}", "\\s*?[\"'`]([^\"'`]*).*?:"]
    ],
    "tailwindCSS.files.exclude": ["**/.github/**", "**/*.{md,js,ts,json}"],
    "[css]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "docker.docker"
    },
    "[json]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[markdown]": {
        "editor.defaultFormatter": "darkriszty.markdown-table-prettify"
    },
    "[go]": {
        "editor.defaultFormatter": "golang.go",
        "editor.formatOnSave": true
    },
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml",
        "editor.formatOnSave": false
    },
    "[tailwindcss]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescript][typescriptreact][javascript]": {
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "quickfix.biome": "explicit",
            "source.organizeImports.biome": "explicit"
        }
    }
}
