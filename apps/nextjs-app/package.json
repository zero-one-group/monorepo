{
    "name": "nextjs-app",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "check": "biome check . --write",
        "cleanup": "pnpm dlx rimraf node_modules .{cache,data,next,tmp} dist tests-results",
        "test-report": "pnpm dlx serve tests-results -l 9000 -s -n -C",
        "test-coverage": "vitest run --coverage",
        "test-ui": "vitest --ui",
        "test": "vitest --run",
        "e2e-install": "playwright install --with-deps",
        "e2e-chrome": "playwright test --headed --project Chromium",
        "e2e-firefox": "playwright test --headed --project Firefox",
        "e2e-mobile": "playwright test --headed --project 'Mobile Chrome'",
        "e2e-safari": "playwright test --headed --project Safari",
        "e2e-report": "playwright show-report tests-results/e2e-html",
        "e2e-ui": "playwright test --ui",
        "e2e": "playwright test",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@repo/shared-ui": "workspace:*",
        "consola": "^3.4.2",
        "lucide-react": "^0.503.0",
        "next": "15.3.1",
        "pathe": "^2.0.3",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "std-env": "^3.9.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@eslint/eslintrc": "^3.3.1",
        "@playwright/test": "^1.52.0",
        "@tailwindcss/postcss": "^4.1.4",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^22.14.1",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@vitejs/plugin-react": "^4.4.1",
        "@vitest/coverage-v8": "^3.1.2",
        "@vitest/ui": "^3.1.2",
        "clsx": "^2.1.1",
        "dotenv": "^16.5.0",
        "eslint": "^9.25.1",
        "eslint-config-next": "15.3.1",
        "happy-dom": "^17.4.4",
        "playwright": "^1.52.0",
        "postcss": "^8.5.3",
        "tailwind-merge": "^3.2.0",
        "tailwind-variants": "^1.0.0",
        "tailwindcss": "^4.1.4",
        "tailwindcss-motion": "^1.1.0",
        "typescript": "5.7.2",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.1.2"
    }
}
