{
	"name": "nextjs-app",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"check": "biome check . --write",
		"cleanup": "pnpm dlx rimraf node_modules .{cache,data,next,tmp} dist tests-results",
		"update-deps": "npm-check-updates --configFileName .ncurc.json",
		"test-report": "pnpm dlx serve tests-results -l 9000 -s -n -C",
		"test-coverage": "vitest run --coverage",
		"test-ui": "vitest --ui",
		"test": "vitest --run",
		"e2e-install": "playwright install --with-deps",
		"e2e-chrome": "playwright test --headed --project Chromium",
		"e2e-firefox": "playwright test --headed --project Firefox",
		"e2e-mobile": "playwright test --headed --project 'Mobile Chrome'",
		"e2e-safari": "playwright test --headed --project Safari",
		"e2e-report": "playwright show-report tests-results/e2e-html",
		"e2e-ui": "playwright test --ui",
		"e2e": "playwright test",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@repo/shared-ui": "workspace:*",
		"consola": "^3.4.2",
		"lucide-react": "^0.544.0",
		"next": "15.5.4",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"std-env": "^3.9.0"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"@eslint/eslintrc": "^3.3.1",
		"@playwright/test": "^1.55.1",
		"@tailwindcss/postcss": "^4.1.14",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.6.2",
		"@types/react-dom": "^19.2.0",
		"@types/react": "^19.2.0",
		"@vitejs/plugin-react": "^5.0.4",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.3",
		"eslint-config-next": "15.5.4",
		"eslint": "^9.36.0",
		"happy-dom": "^19.0.2",
		"npm-check-updates": "catalog:",
		"playwright": "^1.55.1",
		"postcss": "^8.5.6",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss-motion": "^1.1.1",
		"tailwindcss": "^4.1.14",
		"typescript": "catalog:",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	}
}
