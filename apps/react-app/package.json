{
    "name": "react-app",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "react-router dev",
        "build": "react-router build",
        "start": "vite preview --port 3000",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "cleanup": "pnpm dlx rimraf node_modules build .react-router tests-results",
        "test-report": "pnpm dlx serve tests-results -l 9000 -s -n -C",
        "test-coverage": "vitest run --coverage",
        "test-ui": "vitest --ui",
        "test": "vitest --run",
        "e2e-install": "playwright install --with-deps",
        "e2e-chrome": "playwright test --headed --project Chromium",
        "e2e-firefox": "playwright test --headed --project Firefox",
        "e2e-mobile": "playwright test --headed --project 'Mobile Chrome'",
        "e2e-safari": "playwright test --headed --project Safari",
        "e2e-report": "playwright show-report tests-results/e2e-html",
        "e2e-ui": "playwright test --ui",
        "e2e": "playwright test",
        "typegen": "react-router typegen",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@react-router/node": "^7.5.1",
        "@repo/shared-ui": "workspace:*",
        "consola": "^3.4.2",
        "isbot": "^5",
        "lucide-react": "^0.503.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-router": "^7.5.1",
        "std-env": "^3.9.0",
        "tailwind-variants": "^1.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@playwright/test": "^1.52.0",
        "@react-router/dev": "^7.5.1",
        "@tailwindcss/vite": "^4.1.4",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^22.14.1",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@vitest/coverage-v8": "^3.1.2",
        "@vitest/ui": "^3.1.2",
        "dotenv": "^16.5.0",
        "happy-dom": "^17.4.4",
        "playwright": "^1.52.0",
        "react-router-devtools": "^1.1.10",
        "tailwindcss": "^4.1.4",
        "tailwindcss-motion": "^1.1.0",
        "typescript": "5.7.2",
        "vite": "^6.3.2",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.1.2"
    }
}
